{
  "name": "Beastify",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "default_locale": "es",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "icons": {
    "48": "assets/beasts-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "assets/beasts-32.png",
    "theme_icons": [{
        "light": "assets/beasts-32-light.png",
        "dark": "assets/beasts-32.png",
        "size": 32
    }],
    "default_title": "Beastify",
    "default_popup": "index.html"
  }
}